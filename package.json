{
	"name": "barforge-web",
	"version": "0.9.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"api:types": "node scripts/generate-api-types.mjs",
		"api:types:check": "npm run api:types && git diff --exit-code src/lib/api-types.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@testing-library/svelte": "^5.2.10",
		"@types/node": "^25.0.3",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"openapi-typescript": "^7.10.1",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"pyright": "^1.1.407",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"svelte-turnstile": "^0.11.0",
		"tdd-guard-vitest": "^0.1.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@auth/core": "^0.38.0",
		"@auth/sveltekit": "^1.11.1",
		"@iconify/icons-simple-icons": "^1.2.74",
		"@leeoniya/ufuzzy": "^1.0.19",
		"isomorphic-dompurify": "^2.34.0",
		"lucide-svelte": "^0.562.0",
		"marked": "^17.0.1",
		"resend": "^6.6.0",
		"svelte-typewrite": "^3.0.0",
		"sveltekit-sse": "^0.14.3",
		"zod": "^4.2.1"
	},
	"overrides": {
		"cookie": "^1.0.2"
	},
	"type": "module"
}
